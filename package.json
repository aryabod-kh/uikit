{
	"name": "plantir-uikit",
	"version": "0.0.9",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"@types/lodash": "^4.14.202",
		"@types/lodash-es": "^4.17.12",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.17",
		"cssnano": "^6.0.3",
		"daisyui": "^4.7.2",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0-next.4",
		"postcss": "^8.4.35",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"sass": "^1.71.1",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vite-plugin-svelte-purgecss": "^0.2.7",
		"vitest": "^1.2.0"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"svelte": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./components/*": "./dist/components/*"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"date-picker-svelte": "^2.10.1",
		"lodash": "^4.17.21",
		"lodash-es": "^4.17.21",
		"mdsvex": "^0.11.0",
		"mdsvexamples": "^0.4.1",
		"param-case": "^4.0.0",
		"svelte-flatpickr": "^3.3.4"
	},
	"description": "Everything you need to build a Svelte library, powered by [`create-svelte`](https://github.com/sveltejs/kit/tree/main/packages/create-svelte).",
	"main": "dist/index.js",
	"directories": {
		"test": "tests"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/plantir/uikit.git"
	},
	"keywords": [
		"svelte",
		"uikit",
		"svelte",
		"sveltejs",
		"tailwind",
		"tailwindcss",
		"daisyui",
		"svelte components",
		"svelte ui components",
		"svelte daisyui",
		"svelte tailwind",
		"svelte-kit",
		"sveltekit"
	],
	"author": "arminkheirkhahan",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/plantir/uikit/issues"
	},
	"homepage": "https://github.com/plantir/uikit#readme"
}
